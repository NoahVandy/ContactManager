<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".baseOrPerson">

    <Button
        android:id="@+id/btn_addPerson"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Add Person Contact"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_addBusiness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_addBusiness"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Add Business Contact"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_addPerson" />
</android.support.constraint.ConstraintLayout>